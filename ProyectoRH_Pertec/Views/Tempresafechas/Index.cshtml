@model IEnumerable<ProyectoRH_Pertec.Models.Tempresafecha>

@{
    ViewBag.Title = "Control de empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.ViewBag.Title</h2>

<p>
    @Html.ActionLink("Registrar fecha en nuevo empleado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Fecha de ingreso")
        </th>
        <th>
            @Html.DisplayName("Fecha de engreso")
        </th>
        <th>
            @Html.DisplayName("Motivo de egreso")
        </th>
        <th>
            @Html.DisplayName("Número de cédula")
        </th>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IEfechaingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IEfechaegreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IEmotivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Templeado.EempleadoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Templeado.Enombre)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IEempleadoID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IEempleadoID })
        </td>
    </tr>
}

</table>
