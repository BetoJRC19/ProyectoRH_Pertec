@model IEnumerable<ProyectoRH_Pertec.Models.Templeado>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.ViewBag.Title</h2>

<p>
    @Html.ActionLink("Registrar Nuevo Empleado", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Primer apellido")
        </th>
        <th>
            @Html.DisplayName("Segundo apellido")
        </th>
        <th>
            @Html.DisplayName("Número de teléfono")
        </th>
        <th>
            @Html.DisplayName("Correo electrónico")
        </th>
        <th>
            @Html.DisplayName("Puesto")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Enombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eapellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Eapellido2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Etelefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ecorreo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tpuesto.Pnombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EempleadoID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.EempleadoID }) 
        </td>
    </tr>
}

</table>
